<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/row_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f7f7f7"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:showDividers="beginning|end"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center">

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:fadeScrollbars="false"
                    android:layout_gravity="center"
                    android:layout_marginRight="1dp">

                    <TextView
                        android:id="@+id/tv_reference_name_site"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="18dp"
                        android:text="ABC INDUSTRIES AND COOPERATIVE"
                        android:gravity="center"
                        android:textColor="#444444"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"/>

                </HorizontalScrollView>

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:fadeScrollbars="false"
                    android:layout_gravity="center"
                    android:layout_marginRight="1dp">

                    <TextView
                        android:id="@+id/tv_reference_license"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="18dp"
                        android:text="Juan Dela Cruz Molina"
                        android:gravity="center"
                        android:textColor="#444444"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"/>

                </HorizontalScrollView>

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:fadeScrollbars="false"
                    android:layout_gravity="center"
                    android:layout_marginRight="1dp">

                    <TextView
                        android:id="@+id/tv_reference_date_modified"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="18dp"
                        android:text="07-17-2017 3:05 PM"
                        android:gravity="center"
                        android:textColor="#444444"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"/>

                </HorizontalScrollView>

            </TableRow>

        </TableLayout>

    </LinearLayout>

</RelativeLayout>
