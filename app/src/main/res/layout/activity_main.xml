<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.unilab.gmp.activity.MainActivity"
    android:background="@drawable/login_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="@integer/login_top"
            android:gravity="top|right">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/iv_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#218421"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="@integer/login_mid"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".35"></LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".55"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".35">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/dart_logo"
                        android:adjustViewBounds="true"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".32"
                    android:gravity="center"
                    android:focusableInTouchMode="true"
                    android:paddingLeft="55dp"
                    android:paddingRight="55dp"
                    android:orientation="vertical">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".2"
                        android:hint="Password"
                        android:singleLine="true"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:background="@drawable/login_textbox_final"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textSize="@dimen/login_text_size"
                        android:inputType="textPassword"
                        android:textAlignment="center"
                        android:enabled="false"
                        android:visibility="invisible"/>

                    <EditText
                        android:id="@+id/et_username"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".4"
                        android:hint="Email"
                        android:singleLine="true"
                        android:paddingRight="10dp"
                        android:inputType="textEmailAddress"
                        android:maxLength="30"
                        android:paddingLeft="10dp"
                        android:background="@drawable/login_textbox_final"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textSize="@dimen/login_text_size"
                        android:textAlignment="center"
                        android:imeOptions="actionNext"
                        android:layout_marginBottom="10dp"/>

               <!-- </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".16"
                    android:gravity="center"
                    android:focusableInTouchMode="true"
                    android:paddingLeft="55dp"
                    android:paddingRight="55dp">-->

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".4"
                        android:hint="Password"
                        android:singleLine="true"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:background="@drawable/login_textbox_final"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textSize="@dimen/login_text_size"
                        android:inputType="textPassword"
                        android:textAlignment="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".19"
                    android:gravity="center"
                    android:paddingLeft="55dp"
                    android:paddingRight="55dp">

                    <Button
                        android:id="@+id/btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="LOG-IN"
                        android:textColor="#ffffff"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/login_button_final"
                        android:textSize="@dimen/login_text_size"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".15"
                    android:orientation="horizontal"
                    android:gravity="top|left"
                    android:paddingLeft="55dp"
                    android:paddingRight="55dp">

                    <CheckBox
                        android:id="@+id/cb_remember"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:text="Remember me"
                        android:textColor="#ffffff"
                        android:buttonTint="@color/checkbox_color"
                        android:textSize="@dimen/login_text_size"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".1"></LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="@integer/login_bot"></LinearLayout>

    </LinearLayout>

</RelativeLayout>
